---
import Layout from "../layouts/Layout.astro";
import { Project } from "@/components/project.tsx";

import {
  NAMESTONE_SDK_URL,
  JELLY_BEANS_URL,
  FIGHT_IQ_URL,
  WANNABET_NAMES_URL,
  WANNABET_URL,
  GOVSCORE_URL,
} from "@/lib/constants";
---

<Layout title="">
  <main class="text-md space-y-8">
    <section class="space-y-4">
      <p>
        I&apos;m an amateur programmer, entrepreneur, internet enthusiast,
        reader, and aspiring writer.
      </p>
      <p>
        I believe in giving people more sovereignty, and think developing better
        internet infrastructure and privacy tech is the surest way to do that.
        There&apos;s probably a long way to go, but until then, I like to spend
        my time working on and alongside open source and decentralized projects
        like Ethereum and Farcaster.
      </p>
      <p>
        Check out my projects if you&apos;d like to see what I&apos;ve been
        working on lately. Also, if you find anything interesting, please feel
        free reach out.
      </p>
    </section>
    <section class="space-y-4">
      <h3 class="font-medium text-lg">Projects</h3>
      <Project
        name="NameStone SDK"
        link={NAMESTONE_SDK_URL}
        date="Sep. '24"
        bio="A type-safe client for the namestone.xyz API."
      />
      <Project
        name="Jelly Beans"
        link={JELLY_BEANS_URL}
        date="Sep. '24 - Current"
        bio="An onchain prediction game."
      />
      <Project
        name="Fight IQ"
        link={FIGHT_IQ_URL}
        date="Aug. '24 - Current"
        bio="Platform for pro MMA data, analytics, and tools."
      />
      <Project
        name="WannaBet Names"
        link={WANNABET_NAMES_URL}
        date="Aug. '24"
        bio="Claim free ENS 'wannabet.eth' subnames."
      />
      <Project
        name="WannaBet"
        link={WANNABET_URL}
        date="Jun. '24 - Current"
        bio="Peer-to-peer crypto betting app."
      />
      <Project
        name="Optimism GovScore"
        link={GOVSCORE_URL}
        date="Feb. '24 - May '24"
        bio="Web app for discovering quality underrepresented Optimism DAO delegates."
      />
    </section>
  </main>
</Layout>
